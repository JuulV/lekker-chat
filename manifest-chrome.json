{
    "manifest_version": 3,
    "name": "Twitch Chat Sync for Lekker Spelen",
    "version": "1.0.0",
    "description": "Synchronizes archived Twitch chat with YouTube VODs for Lekker Spelen streams.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://127.0.0.1:3000/*",
        "http://localhost:3000/*",
        "https://127.0.0.1:3000/*",
        "https://localhost:3000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/*.woff2",
                "data/yt-ttv.json",
                "data/image_ids.json"
            ],
            "matches": [
                "*://www.youtube.com/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Twitch Chat Sync"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}